<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_colours" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_border"
            android:gravity="center"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:background="@drawable/blue_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/branch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />

            <View
                android:id="@+id/firstDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#3A4978" />

            <TextView
                android:id="@+id/teaching_mode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout1"
            android:background="@drawable/blue_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />

            <View
                android:id="@+id/secondDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#3A4978" />

            <TextView
                android:id="@+id/edition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:background="@drawable/blue_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />

            <View
                android:id="@+id/thirdDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#3A4978" />

            <TextView
                android:id="@+id/proposer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:background="@drawable/blue_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/startDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />

            <View
                android:id="@+id/fourthDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#3A4978" />

            <TextView
                android:id="@+id/endDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout4"
            android:background="@drawable/blue_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/units"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />

            <View
                android:id="@+id/fifthDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#3A4978" />

            <TextView
                android:id="@+id/teachingPlace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout5"
            android:background="@drawable/blue_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/manager"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />

            <View
                android:id="@+id/sixthDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#3A4978" />

            <TextView
                android:id="@+id/institutionRepresentative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout6"
            android:background="@drawable/blue_border"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/headquarters"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />

            <View
                android:id="@+id/seventhDivider"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#3A4978" />

            <TextView
                android:id="@+id/evalAcecau"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayout7"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/competencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border" />

            <TextView
                android:id="@+id/justificaCompetencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border" />

            <TextView
                android:id="@+id/resultadosEsperados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border" />

            <TextView
                android:id="@+id/recursosDisponibles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_border" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>